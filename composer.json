{
	"name": "data-values/data-values",
	"type": "library",
	"description": "Defines the DataValue interface and some trivial implementations",
	"keywords": [
		"datavalues",
		"wikibase",
		"wikidata"
	],
	"homepage": "https://github.com/DataValues/DataValues",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~8.0",
		"wikibase/wikibase-codesniffer": "^0.1.0"
	},
	"replace": {
		"mediawiki/data-values": "*"
	},
	"autoload": {
		"files" : [
			"DataValues.php"
		],
		"classmap": [
			"src/interfaces",
			"tests/phpunit/DataValueTest.php"
		],
		"psr-4": {
			"DataValues\\": "src/DataValues/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit",
			"@cs"
		],
		"cs": [
			"phpcs -p -s"
		],
		"ci": [
			"@test"
		]
	}
}
